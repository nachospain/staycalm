<div id="sideNavigation" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <ul>
    <br>
    <% if user_signed_in? %>

      <%= link_to t(".sign_in", default: "Logout"), destroy_user_session_path, method: :delete, class: "link-side-bar" %>
      <%= link_to t(".sign_in", default: "My tasks"), tasks_path, class: "link-side-bar" %>
      <%= link_to t(".sign_in", default: "My calendar"), calendar_path, class: "link-side-bar" %>
      <%= link_to t(".sign_in", default: "Week"), week_path, class: "link-side-bar" %>
      <%= link_to t(".sign_in", default: "Today"), day_path, class: "link-side-bar" %>

    <%else %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "link-side-bar" %>
      <%= link_to t(".sign_up", default: "Sign up"), new_user_registration_path, class: "link-side-bar" %>
    <% end %>
  </ul>
</div>

<script>
function openNav() {
  var width = window.innerWidth;

  if (width < 1030) {
    document.getElementById("sideNavigation").style.zIndex = "101";
    document.getElementById("sideNavigation").style.width = "100%";
    document.getElementById("sideNavigation").style.display = "flex";
    document.getElementById("sideNavigation").style.justifyContent = "center";
    document.getElementById("main").style.marginLeft = "250px";
  }
  else {
    document.getElementById("sideNavigation").style.width = "250px";
    document.getElementById("main").style.marginLeft = "250px"; }
  }

function closeNav() {
    document.getElementById("sideNavigation").style.width = "0";
    document.getElementById("main").style.marginLeft = "0";
}
</script>
